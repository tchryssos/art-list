generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Art {
  id             String       @id @default(cuid())
  createdOn      DateTime     @db.Timestamp(6)
  lastModifiedOn DateTime     @db.Timestamp(6)
  name           String
  dateSeen       DateTime     @db.Date
  locationId     String?
  artistId       String?
  imgSrc         String?
  listeningToUrl String?
  Artist         Artist?      @relation(fields: [artistId], references: [id])
  Location       Location?    @relation(fields: [locationId], references: [id])
  ListeningTo    ListeningTo? @relation(fields: [listeningToId], references: [id])
  listeningToId  String?
}

model Location {
  id             String   @id @default(cuid())
  name           String   @unique
  shortName      String?
  createdOn      DateTime @db.Timestamp(6)
  lastModifiedOn DateTime @db.Timestamp(6)
  art            Art[]
}

model Artist {
  id             String   @id @default(cuid())
  name           String   @unique
  createdOn      DateTime @db.Timestamp(6)
  lastModifiedOn DateTime @db.Timestamp(6)
  art            Art[]
}

model ListeningTo {
  id               String   @id @default(cuid())
  createdOn        DateTime @db.Timestamp(6)
  artist           String
  album            String
  externalUrl      String
  externalId       String
  externalProvider String
  duration         Int
  art              Art[]
}
