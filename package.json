{
  "name": "troyslist.art",
  "version": "1.0.0",
  "private": false,
  "author": "<troychryssos@gmail.com>",
  "description": "A 'photo-blog' to track the art that resonates with me. ",
  "license": "MIT",
  "type": "commonjs",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "------- setup -------": "",
    "prepare": "husky install",
    "setup": "chmod -R +x ./scripts/ && pnpm run install && pnpm run prepare",
    "preinstall": "npx only-allow pnpm",
    "------- builds -------": "",
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:serve": "pnpm run build && pnpm run next start -p 3003",
    "------- generators -------": "",
    "generate:env-types": "./scripts/get-env-types.sh",
    "------- lint & test -------": "",
    "test": "jest",
    "lint": "next lint && npx stylelint '**/*.css' && pnpm run knip:prune",
    "lint:prune": "! ts-prune -i src/pages/* | grep -v -e src/pages",
    "knip:prune": "knip --include exports,types",
    "------- prisma -------": "",
    "prisma:regenerate": "npx prisma generate",
    "prisma:db-update-schema": "npx prisma db push"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "@mui/material": "^5.16.0",
    "@prisma/client": "5.10.2",
    "@tanstack/react-query": "^5.62.10",
    "argon2": "^0.41.1",
    "clsx": "^2.1.0",
    "cookie": "^0.6.0",
    "date-fns": "2.30.0",
    "date-fns-tz": "^2.0.1",
    "html-entities": "^2.5.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "next": "^14.1.3",
    "next-superjson-plugin": "0.5.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superjson": "^1.13.3",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "@types/cookie": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^14.1.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^9.0.11",
    "knip": "^5.0.3",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "5.10.2",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2"
  },
  "resolutions": {
    "string-width": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  }
}
