{
  "name": "next-typescript-template",
  "version": "0.1.1",
  "private": false,
  "author": "<troychryssos@gmail.com>",
  "description": "A website by Troy Chryssos",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:serve": "yarn build && yarn next start -p 3003",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "lint": "next lint",
    "lint:prune": "! ts-prune -i src/pages/* | grep -v -e src/pages",
    "prisma:regenerate": "npx prisma generate",
    "prisma:db-update-schema": "npx prisma db push"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@prisma/client": "^5.0.0",
    "date-fns": "^3.3.1",
    "date-fns-tz": "^2.0.1",
    "html-entities": "^2.5.2",
    "lodash.lowercase": "^4.3.0",
    "lodash.padstart": "^4.6.1",
    "lodash.throttle": "^4.1.1",
    "next": "^14.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "@types/lodash.lowercase": "^4.3.6",
    "@types/lodash.padstart": "^4.6.6",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^14.1.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^9.0.11",
    "knip": "^5.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.0.0",
    "typescript": "^5.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
